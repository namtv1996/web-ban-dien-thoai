
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

@model PagedList.IPagedList<Web_SmartPhone.Models.Product>
@using PagedList.Mvc;

<div class="span9">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Xin chào @ViewBag.v.Username</h3>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Ảnh</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                          
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Name</td>
                                <td><img src="@item.Images" style="height: 150px;width:150px;"/></td>
                                <td>@item.Price</td>
                                <td>@item.Quantity</td>
                            
                                <td >@*<p class="sad">.....</p><p class="sad1" style="display:none; width:190px" >*@@item.Detail</td>
                                <td>
                                    <a href="" class="btn btn-default">Sửa</a>
                                    <a href="/Admin/Product/Delete/@item.ID" class="btn btn-danger">Xóa</a>
                                </td>

                            </tr>

                                    }

                    </tbody>
                </table>

            </div>
            <!-- /.table-responsive -->
        </div>

        <!-- /.panel-body -->
    </div>
    <div>
        <a class="btn btn-outline btn-primary" href="/Admin/Product/Create">Tạo Mới</a>
    </div>
    <div>@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
    <!-- /.panel -->
</div>
